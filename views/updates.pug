// update.pug
doctype html

html
  head
    // Título vem do index.js
    title= title

  body
    h1 Criar novo registro

    // Formulário envia dados via POST para /update-cobj
    form(action="/update-cobj" method="POST")

      // ***SUBSTITUIR COM AS PROPRIEDADES QUE VOCÊ CRIOU***
      // NÃO ESQUEÇA DE MUDAR O TYPE!!
      // Campo "cargo"
      label cargo:
      input(type="text" name="cargo" required)
      br

      // Campo "idade"
      label idade:
      input(type="text" name="idade" required)
      br

      // Campo "timeatual"
      label time_atual:
      input(type="text" name="time_atual" required)
      br

      // Botão de envio
      button(type="submit") Criar registro

    // Link para voltar à homepage
    a(href="/") Return to the homepage